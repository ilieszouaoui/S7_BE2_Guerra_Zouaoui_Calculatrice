<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/champ_Input"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="end"
        android:maxLines="1"
        android:textColor="@color/Button"
        android:textSize="40dp"/>

    <TextView
        android:id="@+id/champ_Resultat"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="end"
        android:maxLines="1"
        android:textColor="@color/Button"
        android:textSize="60dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ButtonRes"
                style="@style/ActionButton"
                android:text="Res" />

            <TextView
                android:id="@+id/ButtonPar1"
                style="@style/ActionButton"
                android:text="(" />

            <TextView
                android:id="@+id/ButtonPar2"
                style="@style/ActionButton"
                android:text=")" />

            <TextView
                android:id="@+id/ButtonDiv"
                style="@style/ActionButton"
                android:text="/" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Button7"
                style="@style/Button"
                android:text="7" />

            <TextView
                android:id="@+id/Button8"
                style="@style/Button"
                android:text="8" />

            <TextView
                android:id="@+id/Button9"
                style="@style/Button"
                android:text="9" />

            <TextView
                android:id="@+id/ButtonMul"
                style="@style/ActionButton"
                android:text="X" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Button4"
                style="@style/Button"
                android:text="4" />

            <TextView
                android:id="@+id/Button5"
                style="@style/Button"
                android:text="5" />

            <TextView
                android:id="@+id/Button6"
                style="@style/Button"
                android:text="6" />

            <TextView
                android:id="@+id/ButtonMinus"
                style="@style/ActionButton"
                android:text="-" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Button1"
                style="@style/Button"
                android:text="1" />

            <TextView
                android:id="@+id/Button2"
                style="@style/Button"
                android:text="2" />

            <TextView
                android:id="@+id/Button3"
                style="@style/Button"
                android:text="3" />

            <TextView
                android:id="@+id/ButtonPlus"
                style="@style/ActionButton"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ButtonComa"
                style="@style/Button"
                android:text="," />

            <TextView
                android:id="@+id/Button0"
                style="@style/Button"
                android:text="0" />

            <TextView
                android:id="@+id/ReturnButton"
                style="@style/Button"
                android:text="Ret" />

            <TextView
                android:id="@+id/ButtonEqual"
                style="@style/ActionButton"
                android:text="=" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>